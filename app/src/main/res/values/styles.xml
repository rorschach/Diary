<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DiaryPadding">
        <item name="android:paddingLeft">@dimen/diary_padding</item>
        <item name="android:paddingRight">@dimen/diary_padding</item>
    </style>

    <style name="DiaryTitleStyle" parent="DiaryPadding">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/huge_text_size</item>
    </style>

    <style name="DiaryBodyStyle" parent="DiaryPadding">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:lineSpacingExtra">1dp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

</resources>
