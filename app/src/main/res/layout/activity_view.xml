<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/bg_color"
             android:paddingLeft="8dp"
             android:paddingTop="15dp"
             tools:context=".activities.ViewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <HorizontalScrollView
            android:id="@+id/horizontal_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <me.rorschach.diary.views.VerticalTextView
                    android:id="@+id/end"
                    style="@style/DiaryBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <me.rorschach.diary.views.VerticalTextView
                    android:id="@+id/date"
                    style="@style/DiaryBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <me.rorschach.diary.views.MultipleVerticalTextView
                    android:id="@+id/body"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:MultiTextSize="@dimen/normal_text_size"/>

                <me.rorschach.diary.views.VerticalTextView
                    android:id="@+id/title"
                    style="@style/DiaryBodyStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/point_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/modify"
            style="@style/PointTextStyle"
            android:text="改"/>

        <TextView
            android:id="@+id/save"
            style="@style/PointTextStyle"
            android:text="存"/>

        <TextView
            android:id="@+id/delete"
            style="@style/PointTextStyle"
            android:text="删"/>

    </LinearLayout>

</FrameLayout>